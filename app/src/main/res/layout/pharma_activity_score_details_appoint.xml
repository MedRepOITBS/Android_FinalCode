<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <include
        android:id="@+id/notification_header"
        layout="@layout/pharma_black_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_doctname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/as_margintendp"
            android:layout_marginLeft="@dimen/as_margintendp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:layout_alignParentLeft="true"
            android:text="Doctor Name:"
            android:maxLines="1"
            android:drawableLeft="@mipmap/doctor_icon"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tv_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_doctname_title"
            android:layout_marginTop="@dimen/as_margintendp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:text="doctor name"
            android:textColor="@color/pharma_actscor_textcolor"
            android:maxLines="1"
            android:textSize="@dimen/text_size_profile" />
        <TextView
            android:id="@+id/tv_therapatic_hdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/therapeutic_icon"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_doctname_title"
            android:layout_marginTop="@dimen/as_margintendp"
            android:layout_marginLeft="@dimen/as_margintendp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:layout_marginBottom="@dimen/margintendp"
            android:text="Therapeutic Area:"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_therapatic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:layout_below="@id/tv_doctname_title"
            android:textColor="@color/pharma_actscor_textcolor"
            android:layout_marginBottom="@dimen/margintendp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:maxLines="1"
            android:maxLength="15"
            android:layout_toRightOf="@id/tv_therapatic_hdr"
            android:textSize="@dimen/text_size_profile" />

        <TextView
            android:id="@+id/tv_email_hdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/email_icon"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_therapatic_hdr"
            android:layout_marginTop="@dimen/margintendp"
            android:layout_marginLeft="@dimen/as_margintendp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:layout_marginBottom="@dimen/margintendp"
            android:text="Email Id:"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_email_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx@gmau.com"
            android:layout_below="@id/tv_therapatic_hdr"
            android:textColor="@color/pharma_actscor_textcolor"
            android:layout_marginBottom="@dimen/margintendp"
            android:layout_marginTop="@dimen/margintendp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/as_margintendp"

            android:layout_toRightOf="@id/tv_email_hdr"

            android:textSize="@dimen/text_size_profile" />

        <TextView
            android:id="@+id/tv_mobile_hdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/call_icon"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_email_hdr"
            android:layout_marginTop="@dimen/margintendp"
            android:layout_marginLeft="@dimen/as_margintendp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:layout_marginBottom="@dimen/margintendp"
            android:text="Mobile No:"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_mobile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999999999"
            android:layout_below="@id/tv_email_hdr"
            android:textColor="@color/pharma_actscor_textcolor"
            android:layout_marginBottom="@dimen/margintendp"
            android:layout_marginTop="@dimen/margintendp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/as_margintendp"

            android:layout_toRightOf="@id/tv_mobile_hdr"
            android:maxLines="1"
            android:textSize="@dimen/text_size_profile" />


        <TextView
            android:id="@+id/tv_location_hdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/location_icon"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_mobile_hdr"
            android:layout_marginTop="@dimen/margintendp"
            android:layout_marginLeft="@dimen/as_margintendp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:layout_marginBottom="@dimen/margintendp"
            android:text="Locations:"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margintendp"
            android:maxLength="20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/as_margintendp"
            android:layout_below="@id/tv_mobile_hdr"
            android:layout_toRightOf="@+id/tv_location_hdr"
            android:prompt="@string/app_name" />

        <!--       <TextView
                   android:id="@+id/tv_location"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Address"
                   android:layout_below="@id/tv_mobile_hdr"
                   android:textColor="@color/silver"
                   android:layout_marginBottom="@dimen/margintendp"
                   android:layout_marginTop="@dimen/margintendp"
                   android:layout_marginLeft="@dimen/margintendp"
                   android:layout_marginRight="@dimen/margintendp"

                   android:layout_alignParentRight="true"
                   android:singleLine="true"
                   android:textSize="@dimen/text_size_profile" />-->




    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pharma_actscor_blue02" >

        <Button
            android:id="@+id/btn_doc_com_any"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableRight="@mipmap/wallet"
            android:text="Doctor Competitive Analysis "
            android:background="@color/pharma_actscor_blue03"
            android:padding="5dp"
            android:singleLine="true"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_profile"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/margintendp"
        android:layout_marginLeft="@dimen/as_margintendp"
        android:layout_marginRight="@dimen/as_margintendp"
        android:layout_marginBottom="@dimen/margintendp"
        android:text="Total Score "
        android:textColor="@color/l_blue"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_profile" />

    <!--  <view
          android:id="@+id/chart"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/abc_search_url_text"/>-->
    </LinearLayout>

<!--    <Button
        android:id="@+id/ss"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"

        android:background="@color/home_button"
        android:gravity="center"
        android:text=""
        android:textColor="@color/home_button_text"
        android:textSize="@dimen/abc_dialog_padding_top_material" />-->

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/graph" />




    </RelativeLayout>
    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.app.fragments.PharmaNavigationDrawerFragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>