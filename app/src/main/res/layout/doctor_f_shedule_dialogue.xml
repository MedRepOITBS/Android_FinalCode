<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/popup_titlebg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/feedbacldialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/shedule"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_dialog_heading"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/imagemargin_top"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_vertical_margin" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/imagemargin_top"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:background="@color/dialog_button"
            android:padding="@dimen/margin_tendp"
            android:text="@string/ok"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/dialog_button"
            android:padding="@dimen/margin_tendp"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_vertical_margin" />
    </LinearLayout>

</LinearLayout>