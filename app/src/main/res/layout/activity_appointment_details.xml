<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_appointment_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="medrep.medrep.AppointmentDetailsActivity">

    <include layout="@layout/common_layout"/>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:id="@+id/layout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="10dp"
            android:background="@mipmap/p_clock_icon"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Time : "
            android:textSize="20sp"
            android:textColor="@color/background_material_dark"/>
        <TextView
            android:id="@+id/lblTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="01:41 AM"
            android:textSize="20sp"
            android:textColor="#808080"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layout_time"
        android:padding="20dp"
        android:id="@+id/layout_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="10dp"
            android:background="@mipmap/calender_icon"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textColor="@color/background_material_dark"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/lblDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13-02-2017"
            android:textSize="20sp"
            android:textColor="#808080"/>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_below="@+id/layout_Date"
        android:id="@+id/layout_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="10dp"
            android:background="@mipmap/navigation"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Location : "
            android:textColor="@color/background_material_dark"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/lblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAL Airport, Bangalore"
            android:textColor="#808080"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_below="@+id/layout_location"
        android:id="@+id/layout_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="10dp"
            android:background="@mipmap/company_icon"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Company : "
            android:textColor="@color/background_material_dark"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/lblCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAIN Medicaments Pvt. Ltd."
            android:textColor="#808080"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_below="@+id/layout_company"
        android:id="@+id/layout_DrugName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:background="@mipmap/drug_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Drug :"
            android:textColor="@color/background_material_dark"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/lblDrugName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alnap -TP"
            android:textColor="#808080"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>
