<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <include
            android:id="@+id/notification_header"
            layout="@layout/pharma_black_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/rep_profile_pic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/default_profile_pic"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_background_shape">

            <TextView
                android:id="@+id/tv_empid_hder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"
                android:layout_alignParentLeft="true"
                android:text="Employee Id: "
                android:singleLine="true"
                android:drawableLeft="@mipmap/doctor_icon"
                android:drawablePadding="10dp"
                android:textSize="@dimen/text_size_profile"
                android:textColor="@android:color/black" />


            <TextView
                android:id="@+id/tv_empid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_empid_hder"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"

                android:text="doctor anme"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="@dimen/text_size_profile" />






            <TextView
                android:id="@+id/tv_empname_hder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/therapeutic_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_empid_hder"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"
                android:layout_marginBottom="@dimen/margintendp"
                android:text="Name: "
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="@dimen/text_size_profile" />

            <TextView
                android:id="@+id/tv_empname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_below="@id/tv_empid_hder"
                android:textColor="@android:color/black"
                android:layout_marginBottom="@dimen/margintendp"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"

                android:layout_toRightOf="@id/tv_empname_hder"
                android:singleLine="true"
                android:textSize="@dimen/text_size_profile" />

            <TextView
                android:id="@+id/tv_email_hdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/email_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_empname_hder"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"
                android:layout_marginBottom="@dimen/margintendp"
                android:text="Email Id: "
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="@dimen/text_size_profile" />

            <TextView
                android:id="@+id/tv_email_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx@gmau.com"
                android:layout_below="@id/tv_empname_hder"
                android:textColor="@android:color/black"
                android:layout_marginBottom="@dimen/margintendp"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"

                android:layout_toRightOf="@id/tv_email_hdr"
                android:singleLine="true"
                android:textSize="@dimen/text_size_profile" />

            <TextView
                android:id="@+id/tv_mobile_hdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/call_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_email_hdr"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"
                android:layout_marginBottom="@dimen/margintendp"
                android:text="Mobile No: "
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="@dimen/text_size_profile" />

            <TextView
                android:id="@+id/tv_mobile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999999999"
                android:layout_below="@id/tv_email_hdr"
                android:textColor="@android:color/black"
                android:layout_marginBottom="@dimen/margintendp"
                android:layout_marginTop="@dimen/margintendp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/margintendp"
                android:layout_toRightOf="@id/tv_email_hdr"
                android:singleLine="true"
                android:textSize="@dimen/text_size_profile" />


            <Button android:id="@+id/btn_view_appointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_button"
                android:layout_alignParentBottom="true"
                android:textColor="@color/home_button_text"
                android:text="View Appointments" />

        </RelativeLayout>
    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.app.fragments.PharmaNavigationDrawerFragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
