<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_marketing_campaigns"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/noti_bg"
    tools:context="medrep.medrep.MarketingCampaignsActivity">
    <include android:id="@+id/included_layout"
        layout="@layout/common_layout" />

    <TextView
        android:id="@+id/marketing_campaigns_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/campaign_text"
        android:padding="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@id/included_layout"
        android:textColor="@android:color/white"/>

</RelativeLayout>
