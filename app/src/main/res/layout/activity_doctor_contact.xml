<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tect_color_white">
    <include layout="@layout/common_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">
            <ImageView
                android:id="@+id/doctorImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/grey_background"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/doctorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Dr John Deo"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:maxLength="15"
                        android:ellipsize="end"
                        android:textColor="@color/register_color"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/specialist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/register_color"
                        android:textSize="15dp" />
                </LinearLayout>
                <!--<Button-->
                    <!--android:id="@+id/add_connection"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="0.15"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:gravity="center"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:src="@mipmap/add_icon"-->
                    <!--android:visibility="gone"/>-->
                <!--<Button-->
                    <!--android:id="@+id/comment"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="0.15"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:src="@mipmap/comments"-->
                    <!--android:visibility="gone"/>-->
            <ImageButton
                android:id="@+id/add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/add_icon"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/message"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:background="@mipmap/comments"
                android:layout_gravity="center_vertical" />
    </LinearLayout>
    <!--<ListView-->
        <!--android:id="@+id/doctorPostListView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:padding="10dp"-->
        <!--android:layout_height="1"/>-->
    <LinearLayout
        android:id="@+id/postLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=" Posted Messages"
            android:background="@color/home_button"
            android:textColor="@color/tect_color_white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/postAvailable"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=" No posts are available !!!"
            android:textColor="@color/register_color"
            android:textSize="23dp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <ListView
            android:id="@+id/postList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/extraLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/addContct"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add"
        android:layout_margin="20dp"
        android:textColor="@color/tect_color_white"
        android:textSize="25dp"
        android:visibility="gone"
        android:background="@color/home_highted" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Delete"
        android:layout_margin="20dp"
        android:textColor="@color/tect_color_white"
        android:textSize="25dp"
        android:background="@color/pharma_actscor_blue03" />


</LinearLayout>
