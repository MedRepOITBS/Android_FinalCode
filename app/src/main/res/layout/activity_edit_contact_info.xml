<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="medrep.medrep.EditContactInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <include layout="@layout/common_layout"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textColor="@color/p_notifi_list"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/mobileNumberValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background_rounded_corners"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="20dp"
            android:textColor="@color/p_notifi_list"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/phoneNumberValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background_rounded_corners"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="20dp"
            android:textColor="@color/p_notifi_list"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/emailValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background_rounded_corners"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alternate Email"
            android:layout_marginTop="20dp"
            android:textColor="@color/p_notifi_list"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/alterEmailValue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background_rounded_corners"/>
    </LinearLayout>
</LinearLayout>
