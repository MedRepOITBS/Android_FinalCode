<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_highted">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/doc_register_navigation_icon"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/title_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MCI Details"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/tect_color_white"/>
    </LinearLayout>
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18dp"
        android:text="These fields help us further validate your account. We only activate doctors that are registered with the medial council of india. This helps us alow seemless and rich users experience to doctors on MedRep."
        android:textColor="@color/tect_color_white"/>

</LinearLayout>