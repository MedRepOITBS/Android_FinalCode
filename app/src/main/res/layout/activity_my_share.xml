<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/d_gray"
    tools:context="medrep.medrep.MyShareActivity">

    <include layout="@layout/common_layout"/>

    <TextView
        android:id="@+id/noPosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Posts are shared yet !!!"
        android:textColor="@color/register_color"
        android:textSize="20dp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/my_share_list_view"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:dividerHeight="10dp"
        android:isScrollContainer="false"
        android:background="@color/d_gray"/>

    <Button
        android:id="@+id/global_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_background"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:text="Take me to \'Global Share\'"/>

    <include layout="@layout/common_tabs"/>

</LinearLayout>
