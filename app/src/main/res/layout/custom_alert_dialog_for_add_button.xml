<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners_with_white_background">

    <Button
        android:id="@+id/moreOptionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Options"
        android:background="@color/tect_color_white"
        android:textColor="@color/register_color"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:gravity="center"/>

    <Button
        android:id="@+id/addMembersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tect_color_white"
        android:text="Add Contacts"
        android:textAllCaps="false"
        android:textColor="@color/p_notifi_list"
        android:gravity="center"/>

    <Button
        android:id="@+id/pendingMembersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Contacts"
        android:background="@color/tect_color_white"
        android:textColor="@color/p_notifi_list"
        android:textAllCaps="false"
        android:gravity="center"/>

    <Button
        android:id="@+id/createGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:background="@color/tect_color_white"
        android:textColor="@color/p_notifi_list"
        android:textAllCaps="false"
        android:gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/leaveGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Group"
        android:background="@color/tect_color_white"
        android:textColor="@color/p_notifi_list"
        android:textAllCaps="false"
        android:gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:background="@color/tect_color_white"
        android:textColor="@color/p_notifi_list"
        android:textAllCaps="false"
        android:gravity="center"/>


</LinearLayout>