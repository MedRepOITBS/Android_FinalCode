<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="medrep.medrep.DoctorParticularGroupActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/navigation_with_bottom_line">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:layout_weight="0.3">
            <Button
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/logo_1"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/groupIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/grey_background"/>
        <TextView
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group 3"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/register_color"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical">
            <Button
                android:id="@+id/addButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/add_icon"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <AutoCompleteTextView
            android:id="@+id/searchConnections"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/d_gray"
            android:hint="Connections"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColorHint="@color/silver"/>
    </LinearLayout>
    <ListView
        android:id="@+id/doctorGroupMembersListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:isScrollContainer="false"/>
    <Button
        android:id="@+id/removeContactButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Remove"
        android:textColor="@color/tect_color_white"
        android:textSize="20dp"
        android:background="@drawable/green_backgroud_with_round_corners"
        android:layout_margin="10dp"
        android:textAllCaps="false"/>
</LinearLayout>
